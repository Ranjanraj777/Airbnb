<% layout("/layouts/boilerplate") %>

<h3>All Listings</h3>

<div class="card-container">
  <% for(let listing of allListings) { %>
    <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card col">
      <% if (listing.image && listing.image.url) { %>
        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 25rem;" />
      <% } else { %>
        <img src="path/to/default/image.jpg" class="card-img-top" alt="default_image" /> <!-- Default image placeholder -->
      <% } %>
      <div class="card-body">
        <h5 class="card-title"><%= listing.title %></h5>
        <p class="card-text">
          &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> /night
        </p>
        
      </div>
    </div>
  <% } %>  
</a> 
</div>

