<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3 class="col-6 offset-2">Listing Details :</h3>
    <br>
    
    <div class="card col-6 offset-2">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top show show-img"
        alt="show_image"
      />

      <div class="card-body">
        <p class="card-text">
          <b>Title:-<%= listing.title %></b>
          <br>
          <b> desc:-</b><%= listing.description %>
          <br>
          <b>price:-</b></b> &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") :
          "N/A" %> /night
          <br>
          <b>location:-</b></b> <%= listing.location %>
          <br>
          <b>country:-</b></b> <%= listing.country %>


        </p>
      </div>
    </div>
   
    <br />
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-secondary"
      >Edit this Listing</a
    >
    <br /><br />
    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
      <button class="btn btn-danger">Delete this listing</button>
    </form>
    <br>
  </div>
</div>
</div>
</div>
